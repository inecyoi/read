/* pages/ci/ci.wxss */
.hr{
  background-color: #ff9800;
  width: 100%;
  height: 1rpx;
  margin: 20rpx 0;
}
.tu{
  width: 100%;
}
.list{
  position: relative;
  padding: 0 40rpx 0 60rpx;
}
.shoucang{
  padding: 25rpx;
  background-color: #fff;
  box-shadow: 0 5px 5px #ccc;
  display: inline;
  border-radius: 50%;
  position: absolute;
  right: 50rpx;
  top: -50rpx;
}

.title{
  display: inline;
  position: relative;
}
.tou{
  width: 200rpx;
}
.uss{
  margin-left: 20rpx;
  position: absolute;
  top: -18rpx;
  white-space:nowrap;
}
.time{
  font-size: 20rpx;
  color: #ccc;
  display: inline;
  float: right;
}

.zizi{
  font-weight: 100;
  font-size: 50rpx;
  display: block;
  padding:40rpx 0;
}
.zi{
  line-height: 2rem;
  border-bottom: 1rpx solid rgb(240, 240, 240);
  line-height: 100rpx;
  padding-bottom: 20rpx;
}
/* 点赞评论 */
.pp{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.pp-item{
  width: 33%;
  margin-right: 20rpx;
  font-size: 25rpx;
  padding-left: 70rpx;
  border-left: 1rpx solid #ccc;
}
.pp-item:first-child{
  border: 0;
}